<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetails"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:clipChildren="false"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" >

            </androidx.appcompat.widget.Toolbar>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_home"
                tools:srcCompat="@drawable/ic_home" />

            <TextView
                android:id="@+id/_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Macaroni - Cheese Veg"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Quintessential veg macaroni n cheese, la piroz style. Fat-5 per 100 g, Protein-22 per 100 g, Carbohydrate-23.7 per 100 g, Sugar-16 per 100 g, Calories-168.6 kcallNutritional Information per 100g"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="₹165"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Add to Cart" />

            <TextView
                android:id="@+id/textView_you_may_also_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="YOU MAY ALSO LIKE"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout_you_may_also_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_smoke_chilli_mac_veg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_home"
                    tools:srcCompat="@drawable/ic_home" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_smoke_chilli_mac_veg_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smoke Chilli Macaroni Veg"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView_smoke_chilli_mac_veg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹165"
                    android:textSize="16sp"
                    android:textStyle="bold" />
</LinearLayout>
                <Button
                    android:id="@+id/button_add_smoke_chilli_mac_veg_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_you_may_also_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_smoke_chilli_mac_veg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_home"
                    tools:srcCompat="@drawable/ic_home" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView_smoke_chilli_mac_veg_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smoke Chilli Macaroni Veg"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView_smoke_chilli_mac_veg_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹165"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <Button
                    android:id="@+id/button_add_smoke_chilli_mac_veg_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_you_may_also_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_smoke_chilli_mac_veg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_home"
                    tools:srcCompat="@drawable/ic_home" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView_smoke_chilli_mac_veg_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smoke Chilli Macaroni Veg"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView_smoke_chilli_mac_veg_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹165"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <Button
                    android:id="@+id/button_add_smoke_chilli_mac_veg_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout >