<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout"
    android:background="@drawable/card_white_bg"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/item_image"


        android:layout_width="164dp"


        android:layout_height="106dp"


        android:layout_alignParentEnd="true"


        android:layout_marginEnd="13dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/search_24" />

    <TextView
        android:id="@+id/bestseller_text"


        android:layout_width="wrap_content"


        android:layout_height="wrap_content"


        android:layout_alignTop="@id/item_image"


        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#D3C335"
        android:hapticFeedbackEnabled="false"
        android:text="Bestseller"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bestseller_text"
        android:layout_marginStart="16dp"
        android:text="Veg Spaghetti - Pesto"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ingredient_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@id/item_name_text"


        android:layout_marginStart="16dp"


        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Onions, Capsicum, Mushrooms,..."
        android:textSize="14sp" />


    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_below="@+id/ingredient_text"


        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:text="249.00"
        android:textSize="18sp"
        android:textStyle="bold" />

