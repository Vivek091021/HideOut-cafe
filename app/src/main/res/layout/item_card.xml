    <RelativeLayout
        android:id="@+id/add_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredient_text"
        android:layout_alignStart="@+id/item_image"
        android:layout_alignEnd="@+id/item_image"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center">

    <!-- Use MaterialButton for the main button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:cornerRadius="20dp"
        app:iconGravity="end"
        app:icon="@drawable/baseline_add_24"
        android:outlineProvider="paddedBounds"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:outlineSpotShadowColor="@color/colorPrimary"
        android:backgroundTint="#F1F1F1"
        android:textColor="@color/colorPrimary"
        app:iconTint="@color/colorPrimary"
        android:layout_centerHorizontal="true"
    />

    <!-- Use a separate layout for the increment buttons -->
        <LinearLayout
            android:id="@+id/inc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/add"
            android:layout_centerHorizontal="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:background="@drawable/card_view"
            android:backgroundTint="@color/colorPrimary"
            android:visibility="gone">

            <!-- Use MaterialButton for the decrement button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/t1"
                android:layout_width="32dp"
            android:layout_height="40dp"
                android:outlineProvider="none"
            android:paddingStart="8dp"
            app:icon="@drawable/baseline_horizontal_rule_24"
            android:textColor="@color/white"
            />

            <!-- Use TextView for displaying the count -->
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

            <!-- Use MaterialButton for the increment button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/t3"
                android:layout_width="32dp"
            android:layout_height="40dp"
            app:iconGravity="start"
            android:paddingStart="8dp"
                android:outlineProvider="none"
            app:icon="@drawable/baseline_add_24"
            android:textColor="@color/white"
            />

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>